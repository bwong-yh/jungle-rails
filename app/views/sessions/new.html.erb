<%= form_tag '/login' do %>
  <h1>Login</h1>

  <section>
    <label for="" class="form-label">Email</label> 
    <%= text_field_tag :email %>
  </section>

  <section>
    <label for="" class="form-label">Password</label> 
    <%= password_field_tag :password %>
  </section>

  <section>
    <%= submit_tag "Submit" %>
  </section>
<% end %>