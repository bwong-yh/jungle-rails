<section class="admin-dashboard-index">

  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

<table>
    <tr>
      <th><h4>Categories <span class="badge bg-success"><%= @categories.count %></span></h4></th>
    </tr>
    
    <% @categories.each do |category| %>
      <tr><td><%= category.name %></td></tr>
    <% end %>
</table>

<table class="mt-4">
    <tr>
      <th><h4>Products <span class="badge bg-success"><%= @products.count %></span></h4></th>
    </tr>
    
    <tr><td><%= link_to "See all products", admin_products_path, class:"dropdown-item" %></td></tr>
</table>


</section>